<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Kokyaku.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF6C0000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Kokyaku</item>
    </style>

    <style name="Platform.Theme.Kokyaku" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Base.Theme.Kokyaku" parent="Platform.Theme.Kokyaku">
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Kokyaku" parent="Base.Theme.Kokyaku">
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
    </style>
</resources>